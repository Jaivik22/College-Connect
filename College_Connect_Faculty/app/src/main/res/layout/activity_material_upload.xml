<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MaterialUpload">
    <TextView
        android:id="@+id/branchtxt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Branch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"/>

    <Spinner
        android:id="@+id/spinner11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/branchtxt2"
        />
    <TextView
        android:id="@+id/semtxt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Semester"
        app:layout_constraintTop_toBottomOf="@id/spinner11"
        android:layout_marginTop="20dp"/>

    <Spinner
        android:id="@+id/spinner22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/semtxt2"
        />
    <TextView
        android:id="@+id/subjecttxt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Subject"
        app:layout_constraintTop_toBottomOf="@id/spinner22"
        android:layout_marginTop="20dp"/>

    <Spinner
        android:id="@+id/spinner33"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subjecttxt2"
        />

    <ImageView
        android:id="@+id/chooseImg"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/chooseimg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinner33" />

    <TextView
        android:id="@+id/filenametxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chooseImg" />

    <Button
        android:id="@+id/uploadfileBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload file"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filenametxt"
        android:layout_marginTop="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>